@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Users</h1>
<br />

@if (Model.Count() > 0)
{
    <div class="container">
        <table class="table table-hover table-striped dt-responsive nowrap">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(U => U.Username)</th>
                    <th>@Html.DisplayNameFor(U => U.DisplayName)</th>
                    <th>@Html.DisplayNameFor(U => U.PhoneNumber)</th>
                    <th>@Html.DisplayNameFor(U => U.Email)</th>
                    <th>Roles</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Username</td>
                        <td>@user.DisplayName</td>
                        <td>@Html.DisplayFor(M => user.PhoneNumber)</td>
                        <td>@Html.DisplayFor(M => user.Email)</td>
                        <td>@string.Join(", " , user.Roles.ToList())</td>
                        <td>
                            <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@user.Id">
                                <i class="fas fa-edit"></i>
                                Manage Role
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There is no customers!</h2>
    </div>
}

@section Scripts{
    <partial name="_Validationscriptspartial.cshtml" />
}
