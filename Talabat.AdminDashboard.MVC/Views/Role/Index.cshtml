@model  IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<h1>All Roles</h1>
<br />
<partial name="_RoleFormPartialView" model ="new RoleFormViewModel()"></partial>
@if(Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(R => R.Id)</th>
                <th>@Html.DisplayNameFor(R => R.Name)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>
                        <a 
                            class="btn btn-outline-warning"
                            asp-action="Edit"
                            asp-route-id="@role.Id"
                        >
                            <i class="fas fa-edit"></i>
                            Edit
                        </a>
                        <a
                            class="btn btn-outline-danger"
                           asp-action="Delete"
                           asp-route-id="@role.Id">
                            <i class="fas fa-trash"></i>
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There is no roles!</h2>
    </div>
}
@section Scripts{
    <partial name="_Validationscriptspartial.cshtml" />
}
